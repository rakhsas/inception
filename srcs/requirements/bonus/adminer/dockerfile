FROM debian:12

RUN apt update
RUN apt install -y wget
RUN apt install -y wget php8-common php8-iconv php8-json php8-gd php8-curl php8-xml \
	php8-mysqli php8-imap php8-cgi fcgi php8-pdo php8-pdo_mysql php8-soap php8-xmlrpc \
	php8-posix php8-mcrypt php8-gettext php8-ldap php8-ctype php8-dom php8 php8-fpm php8-opcache php8-session; \
	rm -rf /var/cache/apk/*

RUn wget "https://github.com/vrana/adminer/releases/download/v4.8.1/adminer-4.8.1.php"

RUN mv adminer-4.8.1.php index.php

EXPOSE 8080

# CMD ["php-fpm", "-S", "0.0.0.0:8080"]

CMD ["tail", "-f", "/dev/null"]